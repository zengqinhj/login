
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
.container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 850rpx;
    width: 90%;
    margin: 30rpx auto;
  }
  
  .row{
    position: relative;
    height: 100rpx;
    width: 100%;
    border-radius: 10rpx;
    background: #fff;
    /* margin-bottom: 20rpx; */
    padding-left: 20rpx;
    box-sizing: border-box;
  }
  .row input{
    width: 100%;
    height:100%;
    background: rgb(226, 222, 222);
    border-radius: 10rpx;
  }
  .codeBtn{
    position: absolute;
    right: 0;
    top: 0;
    color: #bbb;
    width: 30%;
    font-size: 26rpx;
    height: 100rpx;
    line-height: 100rpx;
  }
  .save{
    width: 100%;
    height: 100rpx;
    color: #bbb;
    background:#0b988f ;
    border-radius: 10rpx;
    line-height: 100rpx;
  }