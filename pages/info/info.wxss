/* pages/info/info.wxss */
page{
  height: 100%;
  width: 100%;
  background: linear-gradient(#fff);
  display: flex;
  flex-direction: column; 
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 850rpx;
  width: 90%;
  margin: 30rpx auto;
}

.row{
  position: relative;
  height: 100rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  /* margin-bottom: 20rpx; */
  padding-left: 20rpx;
  box-sizing: border-box;
}
.row input{
  width: 100%;
  height:100%;
  background: rgb(226, 222, 222);
  border-radius: 10rpx;
}
.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color: #bbb;
  width: 30%;
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.save{
  width: 100%;
  height: 100rpx;
  color: #bbb;
  background:#0b988f ;
  border-radius: 10rpx;
  line-height: 100rpx;
}